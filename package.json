{
	"name": "@vipro/qa-framework",
	"version": "0.1.0",
	"description": "Standalone visual QA testing dashboard with Playwright",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"bin": {
		"qa-framework": "./bin/cli.js",
		"qa": "./bin/cli.js"
	},
	"files": [
		"bin",
		"src",
		"app",
		"public",
		"next.config.mjs",
		"tsconfig.json",
		"tailwind.config.js",
		"postcss.config.js",
		"next-env.d.ts"
	],
	"scripts": {
		"dev": "next dev -p 4000",
		"build": "next build",
		"start": "next start -p 4000",
		"qa": "node bin/cli.js",
		"type-check": "tsc --noEmit",
		"test": "playwright test",
		"generate:actions": "tsx scripts/generate-actions.ts",
		"install:skill": "./scripts/install-skill.sh",
		"update:skill": "./scripts/install-skill.sh"
	},
	"keywords": [
		"qa",
