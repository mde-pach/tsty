{
  "name": "Onboarding: Root Page Layout",
  "description": "Verify the root page loads correctly with all key UI elements: header, sidebar, search, filters, and flow cards grid",
  "baseUrl": "http://localhost:4000",
  "failFast": true,
  "steps": [
    {
      "name": "Load root page",
      "url": "/",
      "capture": { "screenshot": true },
      "primitives": [
        { "type": "waitForLoadState", "options": { "state": "networkidle" } }
      ],
      "assertions": [
        { "type": "visible", "selector": "h1:has-text('Tests')" },
        { "type": "visible", "selector": "text=Browse and run your test flows" },
        { "type": "visible", "selector": "text=New Flow" },
        { "type": "visible", "selector": "text=All Flows" }
      ]
    },
    {
      "name": "Verify search bar",
      "capture": { "screenshot": true },
      "assertions": [
        { "type": "visible", "selector": "input[placeholder*='Search flows']" }
      ]
    },
    {
      "name": "Verify filter controls",
      "capture": { "screenshot": true },
      "assertions": [
        { "type": "visible", "selector": "select:has(option[value='all'])" },
        { "type": "visible", "selector": "select:has(option[value='recent'])" }
      ]
    }
  ]
}
