{
  "name": "Health Check",
  "baseUrl": "http://localhost:4000",
  "failFast": true,
  "monitorConsole": false,
  "playwright": {
    "headless": true,
    "timeout": 10000
  },
  "steps": [
    {
      "name": "Homepage loads",
      "url": "/",
      "capture": {
        "screenshot": true
      },
      "primitives": [
        {
          "type": "waitForLoadState",
          "options": {
            "state": "networkidle"
          }
        }
      ]
    }
  ]
}