{
  "name": "Discover Root Page",
  "description": "Capture HTML and screenshots of the root page to understand UI structure",
  "baseUrl": "http://localhost:4000",
  "failFast": true,
  "steps": [
    {
      "name": "Load root page",
      "url": "/",
      "capture": {
        "screenshot": true,
        "html": true,
        "console": true
      },
      "primitives": [
        { "type": "waitForLoadState", "options": { "state": "networkidle" } }
      ]
    }
  ]
}
